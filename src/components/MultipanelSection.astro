---
import SectionContainer from "./SectionContainer.astro";
import Subtitle from "./Subtitle.astro";

interface Props {
    title: string;
    multiPanels: {
        title: string;
        href: string;
        description: string;
    }[],
    catSize: String;
}

const buttons = [
    { icon: "fa-solid fa-circle-left" },
    { icon: "fa-solid fa-circle-right" },
]

const { title, multiPanels, catSize } = Astro.props;
---


<SectionContainer classExtra="!py-0 !px-0 !pt-5">
    <div
    class="flex items-center justify-between px-8"
    >
        <Subtitle classExtra="!pb-0">
            {title}
        </Subtitle>
        <div
        class="flex gap-2"
        >
            {
                buttons.map(n => (
                    <button class="hover:scale-110 active:scale-100 transition">
                        <i class:list={["text-3xl", n.icon]}></i>
                    </button>
                ))
            }
        </div>
    </div>
    <div
    class="flex overflow-x-auto py-5 px-8 gap-5 panels"
    >
        {
            multiPanels.map(n => (
                <a
                href={n.href}
                class:list={[
                    `size-${catSize}`,
                    "flex-shrink-0 bg-slate-500 rounded-2xl hover:scale-105 transition",
                ]}
                >
                    <div class="flex flex-col justify-end items-end w-full h-full p-5">
                        <p class="text-xl font-semibold">
                            {n.description}
                        </p>
                        <h5 class="text-2xl font-bold">
                            {n.title}
                        </h5>
                    </div>
                </a>
            ))
        }
    </div>
</SectionContainer>

<style>
    .panels {
        scrollbar-width: none;
    }
</style>